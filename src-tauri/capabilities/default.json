{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "dialog:default",
    "store:default",
    "fs:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-home-meta-recursive"
    },
    {
      "identifier": "fs:allow-home-read-recursive"
    },
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close"
  ]
}